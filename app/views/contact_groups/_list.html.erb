<table class="table table-striped table-responsive table-hover">
  <thead>
  <tr>
    <th></th>
    <th>Label</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% i = 0 %>
  <% @contact_groups.each do |contact_group| %>
      <tr class="clickable-row" data-href="<%= contact_group_path contact_group %>">
        <th scope="row"><%= i += 1 %></th>
        <td><%= contact_group.label %></td>
        <td><%= contact_group.description %></td>
        <td>
          <div class="entiry-action">
            <%= link_to (t 'actions.view'), contact_group, class: 'btn btn-xs btn-primary' %>
            <%= link_to (t 'actions.edit'), edit_contact_group_path(contact_group), class: 'btn btn-xs btn-warning' %>
            <%= link_to (t 'actions.empty'), contact_groups_path, class: 'btn btn-xs btn-default' %>
            <%= link_to (t 'actions.delete'), contact_group, class: 'btn btn-xs btn-danger', method: :delete,
                        data: { confirm: "#{(t :contact_group_del_confirm)
                                .gsub('%contact_group%', "#{contact_group.label}")}#{(t :cannot_undo)}" } %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>