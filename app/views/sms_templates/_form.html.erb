<%= form_for(@sms_template) do |f| %>
  <% if @sms_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sms_template.errors.count, "error") %> prohibited this sms_template from being saved:</h2>

      <ul>
      <% @sms_template.errors.full_messages.each do |message| %>
        <li><%= message.html_safe %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :label %>
      <%= f.text_field :label, { class: 'form-control',
                                 required: 'required',
                                 pattern: '.{1,20}',
                                 title: "#{(t 'sms_template_form.label_required')}
                                         #{(t 'sms_template_form.label_length')}"} %>
  </div>
  <div class="form-group">
       <%= f.label :msg_body %>
       <%= f.text_field :msg_body, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
