<p id="notice"><%= notice %></p>

<h1>Listing Sms Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Originator</th>
      <th>Msg body</th>
      <th>Time zone</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Encoding</th>
      <th>On screen</th>
      <th>Total sms</th>
      <th>Sent to box</th>
      <th>State</th>
      <th>Estimated cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sms_campaigns.each do |sms_campaign| %>
      <tr>
        <td><%= sms_campaign.label %></td>
        <td><%= sms_campaign.originator %></td>
        <td><%= URI.decode(sms_campaign.msg_body) %></td>
        <td><%= sms_campaign.timezone %></td>
        <td><%= sms_campaign.start_date %></td>
        <td><%= sms_campaign.end_date %></td>
        <td><%= sms_campaign.encoding %></td>
        <td><%= sms_campaign.on_screen %></td>
        <td><%= sms_campaign.total_sms %></td>
        <td><%= sms_campaign.sent_to_box %></td>
        <td><%= sms_campaign.state %></td>
        <td><%= sms_campaign.estimated_cost %></td>
        <td><%= link_to 'Show', sms_campaign %></td>
        <td><%= link_to 'Edit', edit_sms_campaign_path(sms_campaign) %></td>
        <td><%= link_to 'Destroy', sms_campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

