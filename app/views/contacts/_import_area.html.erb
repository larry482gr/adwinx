<div class="col-sm-12 col-xs-12 drop-area" id="contacts-drop-area">
  <div class="col-sm-8 col-xs-12">
    <h4>Drop your contact lists here</h4>
    <div id="actions" class="row">
      <div id="previews" class="table table-striped files">
        <div id="contact-lists-template" class="file-row dz-image-preview">
          <div>
            <p class="name" data-dz-name></p>
            <span class="notice text-success" data-dz-noticemessage></span>
            <span class="error text-danger" data-dz-errormessage></span>
          </div>
          <div>
            <p class="size" data-dz-size></p>
            <div class="progress progress-striped active"
                 aria-valuenow="0" aria-valuemax="100" aria-valuemin="0" role="progressbar">
              <div class="progress-bar progress-bar-primary" data-dz-uploadprogress style="width:0%;"></div>
            </div>
          </div>
          <div>
            <button class="btn btn-primary btn-sm start">
              <i class="glyphicon glyphicon-upload"></i>
              <span>Start</span>
            </button>
            <button class="btn btn-danger btn-sm cancel" data-dz-remove>
              <i class="glyphicon glyphicon-ban-circle"></i>
              <span>Remove</span>
            </button>
          </div>
        </div>
      </div>
      <div class="col-sm-12" id="total-progress-text">
        Processed: <span id="import-processed"></span>/<span id="import-total"></span>
      </div>
      <div class="col-sm-12" id="processing-progress">
        <div id="total-progress" class="progress progress-striped active"
             aria-valuenow="0" aria-valuemax="100" aria-valuemin="0" role="progressbar">
          <div class="progress-bar progress-bar-success" style="width:0%;"></div>
        </div>
      </div>
      <div class="col-sm-12">
      <span class="btn btn-success btn-sm import-list-button dz-clickable">
        <i class="glyphicon glyphicon-plus"></i>
        <span>Add files...</span>
      </span>
        <button class="btn btn-primary btn-sm start" type="submit">
          <i class="glyphicon glyphicon-upload"></i>
          <span>Start upload</span>
        </button>
        <button class="btn btn-danger btn-sm cancel" type="reset">
          <i class="glyphicon glyphicon-ban-circle"></i>
          <span>Remove files</span>
        </button>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-xs-12">
    <h5>Please use one of these templates in order to provide your lists in the appropriate format</h5>
    <div class="col-sm-3 col-sm-offset-3 col-xs-3 col-xs-offset-3 file-icon">
      <%= link_to '<img src="/assets/csv_icon.png" alt="CSV template">'.html_safe, csv_template_contacts_path, class: 'thumbnail', 'data-no-turbolink': true %>
    </div>
    <div class="col-sm-3 col-xs-3 file-icon">
      <%= link_to '<img src="/assets/xlsx_icon.png" alt="XLSX template">'.html_safe, xlsx_template_contacts_path, class: 'thumbnail', 'data-no-turbolink': true %>
    </div>
  </div>
</div>
